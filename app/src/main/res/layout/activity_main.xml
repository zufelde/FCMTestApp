<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mz.fcmtestapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:background="@color/buttonBackgrClickable"
            android:textSize="16sp"
            android:textColor="@color/buttonTextClickable"
            android:onClick="sendMsgWithoutTtl"
            android:text="Send FCM Message without TTL" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:background="@color/buttonBackgrClickable"
            android:textSize="16sp"
            android:textColor="@color/buttonTextClickable"
            android:onClick="sendMsgWithTtl"
            android:text="Send FCM Message with TTL" />

        <TextView
            android:id="@+id/logView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="#DDDDDD"
            android:background="@android:color/black"
            android:scrollbars = "vertical"/>

    </LinearLayout>
</RelativeLayout>
